        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Farmer/MyProducts">My Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Farmer/AddProduct">Add Product</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Logout">Logout</a>
                </li>
            </ul>
        </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>
</body>
</html>
